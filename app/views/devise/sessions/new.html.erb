<div class="h-screen bg-gray-100 flex justify-center">
    <div class="py-6 px-8 h-[27rem] w-[20rem] my-20 bg-white rounded shadow-xl">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="flex justify-center text-4xl font-bold decoration-sky-500 mb-3">Log in</h2>
        <div class="mb-2">
          <label class="block text-gray-800 font-bold">Email:</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "@email", class: "w-full border border-gray-300 py-2 pl-3 rounded mt-2 outline-none focus:ring-indigo-600 :ring-indigo-600" %>
        </div>
        <div class="mb-2">
          <label class="block text-gray-800 font-bold">Password:</label>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",  class: "w-full border border-gray-300 py-2 pl-3 rounded mt-2 outline-none focus:ring-indigo-600 :ring-indigo-600" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class:"text-sm font-thin text-gray-800 hover:underline mt-2 inline-block hover:text-indigo-600" %><br />
        <% end %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-sm font-thin text-gray-800 hover:underline mt-2 inline-block hover:text-indigo-600" %><br />
        <% end %>
        <%= f.submit "Login", class: "cursor-pointer py-2 px-4 block mt-6 bg-indigo-500 text-white font-bold w-full text-center rounded" %>
    </div>
  </div>
  <% end %>
