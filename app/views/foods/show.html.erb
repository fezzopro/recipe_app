<% if notice.present? %>
<div class="flex items-center bg-teal-100 border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
  <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
  <p><%= notice %></p>
</div>
<%end %>


<div class="flex flex-col md:flex-row md:transform md:scale-75 lg:scale-100 justify-center">
  <div class="border rounded-lg md:rounded-r-none p-10 mx-auto md:mx-0 my-2 md:my-6 bg-gray-100 font-medium z-10 shadow-lg w-[20rem]">
    <%= link_to foods_path do %>
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
      </div>
    <% end %>
    <div class="font-bold text-3xl text-center"><%= @food.name %></div>
    <hr>
    <div class="text-xl my-3 flex justify-between"><span class="text-gray-400">Measurement Unit:</span> <%= @food.measurement_unit %></div>
    <hr>
    <div class="text-xl my-3 flex justify-between"><span class="text-gray-400">Quantity:</span> <%= @food.quantity %></div>
    <hr>
    <div class="text-xl my-3 flex justify-between"><span class="text-gray-400">Unit Price:</span> $<%= @food.price %></div>
    <hr>
      <%= link_to edit_food_path(@food) do %>
        <div class="bg-gradient-base border text-center bg-blue-600 hover:bg-white text-white hover:text-blue-600 font-bold uppercase text-xs mt-5 py-4 px-6 rounded cursor-pointer">
          Edit this food
        </div>
        <div class="bg-gradient-base border text-center bg-red-500 hover:bg-white text-white hover:text-red-700 font-bold uppercase text-xs mt-5 py-4 px-6 rounded cursor-pointer">
            <%= button_to "DESTROY THIS FOOD", @food, method: :delete, data: {confirm: "Are you sure you want to delete this food?"}  %>
        </div>
      <%end%>
  </div>
</div>
