<h2 class="flex justify-center mt-8 text-4xl font-bold shadow decoration-sky-500">Recipes</h2>

<div class="flex justify-center ml-[40%] my-5">
</div>

  <% @recipes.each do |recipe| %>
    <%= link_to "#{public_recipes_path}/#{recipe.id}" do %>
      <div class="overflow-auto rounded-lg shadow mx-[10%]">
        <div class="border-b">
          <div class="flex flex-row gap-4 justify-around">
            <div class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
              <span>
                <%= word_wrap(recipe.name, line_width:30, break_sequence: '\n') %>
              </span>
              <div class="text-sm text-gray-900 font-light px-0 py-4 whitespace-nowrap">
                <%= "By: #{recipe.user.name}"%>
              </div>
            </div>
            <div class="flex flex-col text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
              <span>
                <%= "Total Food Items: #{@recipe_foods.count}" %>
              </span>
              <span>
                <%= render "food_cost" %>
              </span>
            </div>
          </div>
      </div>
    <% end %>
  <% end %>
