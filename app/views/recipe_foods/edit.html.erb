<h1>Editing <%= @recipe_food.food.name%></h1>

<%= form_with url: recipe_recipe_food_path, model: @recipe_food, html: {class: "flex flex-col items-center"} do |form| %>
  
  <% if @recipe_food.errors.any? %>
    <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded relative">
      <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% @recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w-full md:w-1/2 px-3 mb-4">
    <%= form.label :quantity, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
    <%= form.number_field :quantity, min: 1, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
  </div>

  <%= form.collection_select :food_id, current_user.foods, :id, :name, { include_blank: false }, {class: "bg-gray-200 text-gray-700 border border-gray-200 rounded text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-40 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mb-9"} %>
  <div>
    <%= form.submit "Update ingredient", class:"inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out my-2" %>
  </div>
<% end %>

