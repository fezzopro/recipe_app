<h2 class="flex justify-center mt-8 text-4xl font-bold shadow decoration-sky-500">Recipes</h2>

<div class="flex justify-center ml-[40%] my-5">
  <%= link_to new_recipe_path do %>
    <div class="flex h-full p-2 bg-blue-700 text-white shadow rounded-full ml-40 hover:bg-blue-800">
      <div class="relative">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      </div>
    </div>
  <% end %>
</div>

<div class="overflow-auto rounded-lg shadow mx-[10%]">
  <% @recipes.each do |recipe| %>
  <div class="border-b">
    <div class="flex flex-row gap-4">
      <div class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
        <span>
          <%= link_to word_wrap(recipe.name, line_width:30, break_sequence: '\n'), recipe %>
        </span>
        <div class="text-sm text-gray-900 font-light px-0 py-4 whitespace-nowrap">
          <%= button_to "Remove", recipe_path(recipe.id), method: :delete, class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: {confirm: "Are you sure you want to delete this recipe?"}%>
        </div>
      </div>
      <div class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
        <%= link_to truncate(simple_format(word_wrap(recipe.description, line_width:40, break_sequence: '<br>')), {length: 70}), recipe %>
      </div>
    </div>
  <% end %>
</div>
